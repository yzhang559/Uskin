<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareActivity"
    android:background="@drawable/login3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPARE YOUR IMPROVEMENT"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TableLayout
        android:layout_marginTop="90dp"
        android:stretchColumns="0,1"
        android:layout_column="2"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_height="100dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="Selected Record "
                android:textSize="22dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:text="Current "
                android:textSize="22dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:background="@drawable/border"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp" />
        </TableRow>

        <TableRow>
            <TextView android:layout_height="15dp"/>
        </TableRow>



        <TableRow
            android:layout_height="100dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:id="@+id/pastitem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/currentitem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp" />
        </TableRow>


        <TableRow>
            <TextView android:layout_height="15dp"/>
        </TableRow>


        <TableRow
            android:layout_height="120dp">
            <TextView
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border"
                android:id="@+id/textView1"
                android:textSize="21dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:textStyle="bold"
                android:text="Pick Date1" />

            <EditText
                android:background="@drawable/border"

                android:id="@+id/editText1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:inputType="date"
                android:textSize="21dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />
        </TableRow>




        <TableRow>
            <TextView android:layout_height="15dp"/>
        </TableRow>


        <TableRow
            android:layout_height="100dp">
            <TextView
                android:layout_marginRight="10dp"
                android:background="@drawable/border"
                android:id="@+id/editText2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:padding="10dp"
                android:textSize="21dp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>
    <Button
        style="?android:textAppearanceSmall"
        android:background="@color/black1"
        android:id="@+id/press"
        android:layout_alignParentBottom="true"
        android:text="Compare"
        android:textStyle="bold"
        android:textColor="@color/white4"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="50dp" />
</RelativeLayout>
